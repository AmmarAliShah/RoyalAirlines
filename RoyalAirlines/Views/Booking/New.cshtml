@model RoyalAirlines.Models.Booking
@{
    ViewBag.Title = "New Booking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header id="gtco-header" class="gtco-cover gtco-cover-sm" role="banner" style="background-image: url(../../images/img_bg_1.jpg)">
    <div class="overlay"></div>
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-12 col-md-offset-0 text-center">
                <div class="row row-mt-15em">

                    <div class="col-md-12 mt-text " data-animate-effect="fadeInUp">
                        <h1>New Booking</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="gtco-section border-bottom">
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-6 text-center ">
                @using (Html.BeginForm("Save", "Booking"))
                {
                    <div class="form-group">
                        @Html.LabelFor(b => b.Flight.Code)
                        @Html.TextBoxFor(b => b.Flight.Code, new { @class = "form-control" })
                        @Html.ValidationMessageFor(b => b.Flight.Code)
                    </div>
                    @Html.HiddenFor(b => b.Id)
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-primary">Save</button>
                }
            </div>
        </div>
    </div>
</div>



